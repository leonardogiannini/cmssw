#!/bin/bash

masses=(
	800
	1000
	1200
	1400
	1600
)

xangles=(
	120
	130
	140
	150
)

#n_events=400000
n_events=100000
#n_events=4000

#----------------------------------------------------------------------------------------------------

function RunOne()
{
	dir="m_X_$mass/xangle_$xangle"
	echo $dir

	mkdir -p "$dir"

	cat "template_cfg.py"|sed "\
			s|\$mass|$mass|g;\
			s|\$xangle|$xangle|g;\
			s|\$n_events|$n_events|g;\
		" > "$dir/cfg.py"

	cd "$dir"

	cmsRun "cfg.py" &> "log" &

	cd - &> /dev/null
}

#----------------------------------------------------------------------------------------------------

for mass in ${masses[*]}
do
	for xangle in ${xangles[*]}
	do
		RunOne
	done
done
